                            pos: self.center_x -7 , self.center_y - 7
                            size: [14, 14]
    Label:

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint_y: None
        height: 40
        BoxLayout:
            orientation: 'vertical'
            padding: waypoint_wn.space_x, 10
    BoxLayout:
        orientation: 'vertical'
        padding: waypoint_wn.space_x, 10
        #size_hint_y: None
        #height: 40
        Label:
            id: algo_info
            text: ''
            font_size: 20
            markup: True
            bold: True
            size_hint_y: None
